<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zvezdy"
    tools:context=".Main5Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/myfon"
            android:layout_height="300dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:lineSpacingExtra="8sp"
                    android:padding="20dp"
                    android:text=""
                    android:textColor="#193460"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/myfon"
                    android:text="Попросить что-нибудь от головной боли"

                    android:textAlignment="viewStart"
                    android:paddingLeft="25dp"
                    android:textAllCaps="false"
                    android:textColor="#193460"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/myfon"
                    android:text="Поблагодарить Дока Митчелла"
                    android:textAlignment="viewStart"
                    android:paddingLeft="25dp"
                    android:textAllCaps="false"
                    android:textColor="#193460"
                    android:textStyle="italic" />


                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/myfon"
                    android:text="Ограбить старика"
                    android:textAlignment="viewStart"
                    android:paddingLeft="25dp"
                    android:textAllCaps="false"
                    android:textColor="#193460"
                    android:textStyle="italic" />


                <Button
                    android:id="@+id/button4"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/myfon"
                    android:text=" Я бы и сам справился... "
                    android:textAlignment="viewStart"
                    android:paddingLeft="25dp"
                    android:textAllCaps="false"
                    android:textColor="#193460"
                    android:textStyle="italic" />


                <Button
                    android:id="@+id/button5"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/myfon"
                    android:text="Узнать информацию об обидчике"
                    android:textAlignment="viewStart"
                    android:paddingLeft="25dp"
                    android:textAllCaps="false"
                    android:textColor="#193460"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/button6"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/myfon"
                    android:text="Взять свои вещи и выйти на улицу"
                    android:textAlignment="viewStart"
                    android:paddingLeft="25dp"
                    android:textAllCaps="false"
                    android:textColor="#193460"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/myfon"
                    android:text="Узнать свое место нахождения"
                    android:textAlignment="viewStart"
                    android:paddingLeft="25dp"
                    android:textAllCaps="false"
                    android:textColor="#193460"
                    android:textStyle="italic" />

            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>