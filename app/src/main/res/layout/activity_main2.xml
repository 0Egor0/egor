<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zvezdy"
    tools:context="com.example.a2018.myapplication.Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="10dp"
            android:background="@drawable/myfon"
            android:lineSpacingExtra="8sp"
            android:padding="20dp"
            android:text="Привет, давай выберем локацию, на которой будет развиваться сюжет твоей сказки."
            android:textColor="#193460"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/myfon"
                    android:text="Тридевятое царство"
                    android:textAlignment="viewStart"
                    android:paddingLeft="25dp"
                    android:textAllCaps="false"
                    android:textColor="#193460"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/myfon"
                    android:text="Тёмный лес"
                    android:textAlignment="viewStart"
                    android:paddingLeft="25dp"
                    android:textAllCaps="false"
                    android:textColor="#193460"
                    android:textStyle="italic" />


                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/myfon"
                    android:text="Подземелье"
                    android:textAlignment="viewStart"
                    android:paddingLeft="25dp"
                    android:textAllCaps="false"
                    android:textColor="#193460"
                    android:textStyle="italic" />


                <Button
                    android:id="@+id/button4"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/myfon"
                    android:text="Сказочный мир"
                    android:textAlignment="viewStart"
                    android:paddingLeft="25dp"
                    android:textAllCaps="false"
                    android:textColor="#193460"
                    android:textStyle="italic" />


                <Button
                    android:id="@+id/button5"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/myfon"
                    android:text="Нурсултан"
                    android:textAlignment="viewStart"
                    android:paddingLeft="25dp"
                    android:textAllCaps="false"
                    android:textColor="#193460"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/button6"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/myfon"
                    android:text="Пустошь Мохаве"
                    android:textAlignment="viewStart"
                    android:paddingLeft="25dp"
                    android:textAllCaps="false"
                    android:textColor="#193460"
                    android:textStyle="italic" />

                <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/myfon"
                android:text="Поселок городского типа"
                android:textAlignment="viewStart"
                android:paddingLeft="25dp"
                android:textAllCaps="false"
                android:textColor="#193460"
                android:textStyle="italic" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>